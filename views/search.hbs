<!doctype html>

<html lang = "en">
    <head>
        <meta charset = "utf-8"/>
        <meta name = "description" content = "home page of cinema booking system"/>
        <title>Cinema Booking System</title>
        <!-- external css -->
        <link href = "/style.css" type = "text/css" rel = "stylesheet" />
    </head>
    <body>
        <header>
            <h1>Search Movies</h1>
            <a href = "/">Home</a>
            {{#if authorised}}
                <a href = "/logout">Log Out</a>
            {{else}}
                <a href = "/login">Log In</a>
                <a href = "/register">Register</a>
            {{/if}}
        </header>
        <main>
            <form action = "/search" method = "post">
                <p>
                    <select name = "type">
                        <option value = "name">Search by name</option>
                        <option value = "cinema">Search by cinema</option>
                    </select>
                    <input name = "keyword" type = "text" required autofocus />
                </p>
                <p><input type = "submit" value = "Search" /></p>
            </form>
            {{#each movies}}
                <section>
                    <a href = "/detail?id={{this.id}}">
                        <img src = "{{this.thumbnail}}" />
                        <h3>Movie name: {{this.name}}</h3>
                        <p>Rating: {{this.rating}}<p>
                        <p>Cinemas:{{#each this.cinemas}} {{this.name}}{{/each}}</p>
                    </a>
                </section>
            {{/each}}
        </main>
    </body>
</html>
